#:kivy 1.9.1
#:import random random.random
#:import Clock kivy.clock.Clock
#:import Factory kivy.factory

# The width in px of the button bar on the side/bottom of the screen
#:set bb_width 90
<PopupText@Label>:
    color: 0, 0, 0, 1
    halign: 'center'
    valign: 'middle'

<PopupSlider@Slider+FloatLayout>:
    title: ''
    PopupText:
        text: root.title
        pos_hint: {'center': (.5, .825)}
    PopupText:
        text: str(int(root.value // 1))
        pos_hint: {'center': (.5, .675)}
        font_size: 24

<PopupWindow@BoxLayout+ButtonBehavior>:
    size_hint: .9, .9
    pos_hint: {'center': (.5, .5)}
    orientation: 'vertical'
    padding: 20
    canvas:
        Color:
            rgb: .95, .95, .95
        Rectangle:
            size: root.size
            pos: root.pos

        Color:
            rgb: 0, 0, 0
        Line:
            rectangle: self.x, self.y, self.width, self.height

<GameTable>:
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: table.pos
            size: table.size
    id: table
    orientation: tablebox.orientation
    ng_dialog: ng_dialog

    PopupWindow:
        id: ng_dialog
        PopupText:
            text: 'New Puzzle'
            size_hint_y: .1
        PopupSlider:
            id: nb
            title: 'Number of Blanks'
            min: 1
            max: 81
            value: 40
        Button:
            text: 'Generate Puzzle'
            on_press: grid.generate(int(nb.value // 1))

    BoxLayout:
        id: tablebox
        orientation: 'vertical' if self.height > self.width else 'horizontal'
        GridSpace:
            Grid:
                table: table
                id: grid
                center: self.parent.center
                size: self.get_grid_size((table.width, table.height, table.orientation), bb_width)

        BoxLayout:
            id: button_bar
            orientation: 'vertical' if table.orientation == 'horizontal' else 'horizontal'
            size_hint: (None, None)
            size: (bb_width, table.height) if table.orientation == 'horizontal' else (table.width, bb_width)
            spacing: 10
            Widget:
                LgButton:
                    text: 'New Game'
                    on_press: table.ng_popup()
            Widget:
                LgButton:
                    text: 'Rules'
            Widget:
                LgButton:
                    text: 'Solver'
            Widget:
                LgButton:
                    text: 'Quit'
                    on_press: Clock.schedule_once(app.stop, 0.5)

<NumPad>:
    orientation: 'vertical'
    size_hint: (None, None)

<NumPadKey>:
    size_hint: (1/3, 0.25)
    font_size: 0.6 * self.height
    background_normal: 'art/white_button.png'
    background_color: 1, 1, 1
    color: 0, 0, 0, 1

<SpaceKey>:
    size_hint: (1, 0.25)

<LgButton@Button>:
    text: ''
    background_normal: ''
    color: 0, 0, 0, 1
    center: self.parent.center
    size_hint: (None, None)
    size: (70, 70)

<Grid>:
    cols: self.board.lensides
    rows: self.board.lensides
    size_hint: (None, None)
    center: self.parent.center

<Cell>:
    bold: True
    color: 0, 0, 0, 1
    background_normal: ''
    text: self.value if not self.value == '0' else ''